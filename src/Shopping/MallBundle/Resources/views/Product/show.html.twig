{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Product</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Productname</th>
                <td>{{ entity.productname }}</td>
            </tr>
            <tr>
                <th>Productpic</th>
                <td>{{ entity.productpic }}</td>
            </tr>
            <tr>
                <th>Productprice</th>
                <td>{{ entity.productprice }}</td>
            </tr>
            <tr>
                <th>Productdate</th>
                <td>{{ entity.productdate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Productcomment</th>
                <td>{{ entity.productcomment }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('product') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('product_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
